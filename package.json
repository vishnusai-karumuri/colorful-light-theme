{
    "name": "colorful-light-theme",
    "displayName": "Better Light Theme",
    "description": "A modern, highly customizable light theme with easy color customization",
    "version": "1.0.0",
    "publisher": "Monarch",
    "author": {
        "name": "Vishnu Sai Karumuri"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/vkarumuri/colorful-light-theme"
    },
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#27ae60",
        "theme": "light"
    },
    "keywords": [
        "theme",
        "light theme",
        "customizable",
        "color",
        "colorful"
    ],
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Themes"
    ],
    "activationEvents": [
        "onCommand:betterLightTheme.updateColors"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "betterLightTheme.updateColors",
                "title": "Better Light Theme: Update Colors",
                "category": "Better Light Theme"
            }
        ],
        "themes": [
            {
                "label": "Better Light Theme",
                "uiTheme": "vs",
                "path": "./themes/colorful-light-color-theme.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^16.x.x",
        "@types/vscode": "^1.60.0",
        "typescript": "^4.x.x"
    },
    "license": "MIT",
    "dependencies": {
        "colorful-light-theme": "file:"
    }
}
