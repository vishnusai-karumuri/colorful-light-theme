{
    "name": "colorful-light-theme",
    "displayName": "Better Light Theme",
    "description": "A simple but colorful light theme for VS Code",
    "version": "0.0.1",
    "publisher": "user",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Themes"
    ],
    "activationEvents": [
        "onCommand:betterLightTheme.updateColors"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "betterLightTheme.updateColors",
                "title": "Better Light Theme: Update Colors",
                "category": "Better Light Theme"
            }
        ],
        "configuration": {
            "title": "Better Light Theme",
            "properties": {
                "betterLightTheme.colors.editor.background": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#ffffff",
                    "description": "Editor background color"
                },
                "betterLightTheme.colors.editor.foreground": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#2d2b55",
                    "description": "Editor text color"
                },
                "betterLightTheme.colors.activityBar.background": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#f9f9f9",
                    "description": "Activity bar background color"
                },
                "betterLightTheme.colors.activityBar.foreground": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#2d2b55",
                    "description": "Activity bar text color"
                },
                "betterLightTheme.colors.sideBar.background": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#f3f3f3",
                    "description": "Sidebar background color"
                },
                "betterLightTheme.colors.sideBar.foreground": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#2d2b55",
                    "description": "Sidebar text color"
                },
                "betterLightTheme.colors.titleBar.background": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#27ae60",
                    "description": "Title bar background color"
                },
                "betterLightTheme.colors.titleBar.foreground": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#ffffff",
                    "description": "Title bar text color"
                },
                "betterLightTheme.colors.statusBar.background": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#27ae60",
                    "description": "Status bar background color"
                },
                "betterLightTheme.colors.statusBar.foreground": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#ffffff",
                    "description": "Status bar text color"
                },
                "betterLightTheme.colors.syntax.comments": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#a0a1a7",
                    "description": "Color for comments"
                },
                "betterLightTheme.colors.syntax.strings": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#16a085",
                    "description": "Color for strings"
                },
                "betterLightTheme.colors.syntax.keywords": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#8e44ad",
                    "description": "Color for keywords"
                },
                "betterLightTheme.colors.syntax.functions": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#2980b9",
                    "description": "Color for functions"
                },
                "betterLightTheme.colors.syntax.variables": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#c0392b",
                    "description": "Color for variables"
                },
                "betterLightTheme.colors.syntax.constants": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#e67e22",
                    "description": "Color for constants"
                },
                "betterLightTheme.colors.syntax.classes": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#27ae60",
                    "description": "Color for classes"
                },
                "betterLightTheme.colors.syntax.punctuation": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#34495e",
                    "description": "Color for punctuation"
                }
            }
        },
        "themes": [
            {
                "label": "Better Light Theme",
                "uiTheme": "vs",
                "path": "./themes/colorful-light-color-theme.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^16.x.x",
        "@types/vscode": "^1.60.0",
        "typescript": "^4.x.x"
    },
    "dependencies": {
        "colorful-light-theme": "file:"
    }
}
